<% set_title("Editing #{@user.username}") -%>
<% div_block do -%>
  <% form_for(@user, :url => admin_user_path(@user)) do |f| -%>
    <div class="form-row">
      <label for="user_firstname" class="label">Firstname</label>
      <span class="data"><%= f.text_field(:firstname) -%></span>
    </div>
    <div class="form-row">
      <label for="user_surname" class="label">Surname</label>
      <span class="data"><%= f.text_field(:surname) -%></span>
    </div>
    <div class="form-row">
      <label for="user_surname" class="label">Department</label>
      <span class="data"><%= select_tag('department', options_for_select(@departments.collect{ |d| [d.name, d.id] }, @user.department_id)) -%></span>
    </div>
    <div class="form-row">
      <label for="user_surname" class="label">Admin</label>
      <span class="data"><%= @user.id == @current_user.id ? 'true (cannot edit your own admin status)' : check_box_tag('admin', 'admin', @admin) -%></span>
    </div>
    <div class="form-row">
      <span class="data"><input type="submit" name="update" value="Update" /></span>
    </div>
  <% end -%>
<% end -%>
