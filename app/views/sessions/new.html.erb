<% set_title('Login') -%>
<div class="block">
  <% form_tag(session_url, :id => 'login_form') do -%>
    <%= print_flash(flash[:error], 'error', 'Login error') -%>
    <div class="form-row">
      <label for="username" class="label">Username</label>
      <span class="data"><%= text_field_tag('username', session[:username]) -%></span>
    </div>
    <div class="form-row">
      <label for="password" class="label">Password</label>
      <span class="data"><%= password_field_tag('password') -%></span>
    </div>
    <div class="form-row">
      <span class="data"><input type="submit" name="login" value="Login" /></span>
    </div>
  <% end -%>
</div>
